<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xxsmall"
            android:layout_marginBottom="@dimen/margin_xsmall"
            android:background="#efefef"
            android:paddingTop="@dimen/padding_xsmall"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_xsmall"
            android:paddingBottom="@dimen/margin_xxsmall">
            <TextView
                android:id="@+id/news_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TITLE"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:layout_toLeftOf="@+id/chk"
                android:textSize="@dimen/text_size"
                android:textColor="@android:color/primary_text_light"
                android:layout_alignParentLeft="true" />

            <CheckBox
                android:id="@+id/chk"
                android:button="@drawable/customdrawablecheckbox"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="www.something.com"
                android:padding="5dp"
                android:id="@+id/url"
                android:layout_margin="5dp"
                android:layout_below="@+id/news_title"
                android:textSize="@dimen/text_size_small"
                android:textColor="@android:color/holo_blue_light"
                android:layout_alignParentLeft="true"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xxsmall"
            android:layout_marginBottom="@dimen/margin_xsmall"
            android:paddingTop="@dimen/padding_xsmall"
            android:paddingLeft="@dimen/padding_small"
            android:paddingRight="@dimen/padding_xsmall"
            android:paddingBottom="@dimen/margin_xxsmall">
            <TextView
                android:id="@+id/publisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Publisher"
                android:layout_margin="3dp"
                android:textSize="@dimen/text_size"
                android:textColor="@color/user_pic_color"
                android:layout_alignParentLeft="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:id="@+id/category"
                android:layout_margin="3dp"
                android:layout_below="@+id/publisher"
                android:textSize="@dimen/text_size_small"
                android:textColor="@android:color/holo_green_light"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hostname"
                android:id="@+id/hostname"
                android:layout_margin="3dp"
                android:layout_alignParentTop="true"
                android:textSize="@dimen/text_size_small"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_alignParentRight="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Timstamp"
                android:id="@+id/timestamp"
                android:layout_margin="3dp"
                android:layout_below="@+id/hostname"
                android:textSize="@dimen/text_size_small"
                android:layout_alignParentRight="true"
                />


        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
